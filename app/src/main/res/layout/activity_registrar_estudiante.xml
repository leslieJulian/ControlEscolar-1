<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarEstudiante">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--NUMERO DE CONTROL-->
        <TextView
            android:id="@+id/tvNumControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de control:"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <!--NOMBRE-->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        app:layout_constraintTop_toBottomOf="@id/tvNumControl"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNombre"
        app:layout_constraintTop_toBottomOf="@id/tvNumControl" />

    <!--PRIMER APELLIDO-->
    <TextView
        android:id="@+id/tvPrimerApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primer apellido:"
        app:layout_constraintTop_toTopOf="@id/tvNombre"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etPrimerApellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPrimerApellido"
        app:layout_constraintTop_toBottomOf="@id/etNombre" />

    <!--SEGUNDO APELLIDO-->
    <TextView
        android:id="@+id/tvSegundoApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Segundo apellido:"
        app:layout_constraintTop_toTopOf="@id/tvPrimerApellido"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etSegundoApellido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvSegundoApellido"
        app:layout_constraintTop_toBottomOf="@id/etPrimerApellido" />

    <!--CURP-->
    <TextView
        android:id="@+id/tvCurp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CURP:"
        app:layout_constraintTop_toTopOf="@id/tvSegundoApellido"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etCurp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCurp"
        app:layout_constraintTop_toBottomOf="@id/etSegundoApellido" />

    <!--CALLE-->
    <TextView
        android:id="@+id/tvCalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calle:"
        app:layout_constraintTop_toTopOf="@id/tvCurp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etCalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCalle"
        app:layout_constraintTop_toBottomOf="@id/etCurp" />

    <!--COLONIA-->
    <TextView
        android:id="@+id/tvColonia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colonia:"
        app:layout_constraintTop_toTopOf="@id/tvCalle"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etColonia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvColonia"
        app:layout_constraintTop_toBottomOf="@id/etCalle" />

    <!--MUNICIPIO-->
    <TextView
        android:id="@+id/tvMunicipio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Municipio:"
        app:layout_constraintTop_toTopOf="@id/tvColonia"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etMunicipio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvMunicipio"
        app:layout_constraintTop_toBottomOf="@id/etColonia" />

    <!--ESTADO-->
    <TextView
        android:id="@+id/tvEstado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado:"
        app:layout_constraintTop_toTopOf="@id/tvMunicipio"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEstado"
        app:layout_constraintTop_toBottomOf="@id/etMunicipio" />

    <!--CÓDIGO POSTAL-->
    <TextView
        android:id="@+id/tvCodigoPostal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código postal:"
        app:layout_constraintTop_toTopOf="@id/tvEstado"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etCodigoPostal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCodigoPostal"
        app:layout_constraintTop_toBottomOf="@id/etEstado" />

    <!--TELEFONO-->
    <TextView
        android:id="@+id/tvTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        app:layout_constraintTop_toTopOf="@id/tvCodigoPostal"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etTelefono"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTelefono"
        app:layout_constraintTop_toBottomOf="@id/etCodigoPostal" />

    <!--CELULAR-->
    <TextView
        android:id="@+id/tvCelular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular:"
        app:layout_constraintTop_toTopOf="@id/tvTelefono"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etCelular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCelular"
        app:layout_constraintTop_toBottomOf="@id/etTelefono" />

    <!--EMAIL-->
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo electrónico:"
        app:layout_constraintTop_toTopOf="@id/tvCelular"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEmail"
        app:layout_constraintTop_toBottomOf="@id/etCelular" />

    <!--PLAN DE ESTUDIOS-->
    <TextView
        android:id="@+id/tvPlanEstudios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan de estudios:"
        app:layout_constraintTop_toTopOf="@id/tvEmail"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <Spinner
        android:id="@+id/spinnerPlanEstudios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvPlanEstudios"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <!--ESPECIALIDAD-->
    <TextView
        android:id="@+id/tvEspecialidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Especialidad:"
        app:layout_constraintTop_toTopOf="@id/tvPlanEstudios"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <Spinner
        android:id="@+id/spinnerEspecialidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvEspecialidad"
        app:layout_constraintTop_toBottomOf="@id/spinnerPlanEstudios" />

    <!--BOTÓN GuARDAR-->
    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerEspecialidad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCancelar" />

    <!--BOTÓN CANCELAR-->
    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/spinnerEspecialidad"
        app:layout_constraintEnd_toStartOf="@id/btnGuardar"
        app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>